<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_8">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivStatusStatistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_statistic_done" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhiteText"
            android:textSize="@dimen/font_16"
            tools:text="Пользовательское взаимодействие UX для социальной сети" />

        <TextView
            android:id="@+id/tvSubtitleStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:textColor="#818181"
            android:textSize="@dimen/font_14"
            tools:text="Этап 1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPercentStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_statistic_text_percent_gray_circle"
        android:gravity="center"
        android:textColor="#818181"
        android:textSize="@dimen/font_14"
        tools:text="100%" />

    <TextView
        android:id="@+id/tvStepCountInMax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center"
        android:textColor="#818181"
        android:textSize="@dimen/font_14"
        tools:text="20 из 20" />

</LinearLayout>