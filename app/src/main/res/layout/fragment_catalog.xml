<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_search_80"
            android:layout_marginEnd="@dimen/margin_search_80"
            android:theme="@style/AppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTextSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_21" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_32"
            android:textSize="@dimen/font_31"
            tools:text="Каталог" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_32"
            android:maxLines="3"
            android:textSize="@dimen/font_13"
            tools:text="Здесь расположены интерактивные 2D/3D/AR курсы и образовательные-игровые квесты для приобретения и загрузки. После загрузки они будут доступны этом Android устройстве без обязательного подключения сети интернет." />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCardQuest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_32"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/item_quest" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
